<div class="container mt-4">
  <h1 class="mb-4"><%= t('.title') %></h1>
    <div class="d-flex justify-content-end mb-4">
    <%= link_to t('.link.arena'), new_fight_path, class: "btn btn-dark me-4" %>
  </div>
  <div class="d-flex align-items-center justify-content-around mb-4">
    <% @characters.each do |character| %>
      <%= link_to character_path(character), class: "text-decoration-none" do %>
        <div class="me-4 ms-4">
          <div class="card" style="width: 12rem;">
            <%= image_tag character.avatar.variant(:thumb), class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= character.name %></h5>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to ('.link.new_character'), new_character_path, class: "btn btn-primary" %>

</div>